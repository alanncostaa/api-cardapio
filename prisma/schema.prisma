generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id     Int      @id @default(autoincrement())
  nome   String
  pratos Prato[]
}

model Prato {
  id             Int      @id @default(autoincrement())
  nome           String
  valor          Float
  imagem         String
  descricao      String
  vegetariano    Boolean
  contemGluten   Boolean
  contemLactose  Boolean
  categoriaId    Int
  categoria      Categoria @relation(fields: [categoriaId], references: [id])
}
